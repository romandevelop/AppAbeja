<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cl.gestiona.appabeja.EspacioFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_card_img_identificacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/identificacion"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/item_card_title_identificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IdentificaciÃ³n de especies"
                    android:textSize="35sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="false"
                    android:padding="16dp"
                    android:textStyle="bold|italic"
                    android:background="@color/tranparent"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_card_img_comportamiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/comportamiento"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/item_card_title_comportamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comportamiento Recolector"
                    android:textSize="35sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="false"
                    android:padding="16dp"
                    android:textStyle="bold|italic"
                    android:background="@color/tranparent"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_card_img_nidos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nidos"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/item_card_title_nidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nidos"
                    android:textSize="35sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="false"
                    android:padding="16dp"
                    android:textStyle="bold|italic"
                    android:background="@color/tranparent"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>